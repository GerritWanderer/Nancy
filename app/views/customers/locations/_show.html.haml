.location
  .details{:style => "display: #{@displayLocationRecord || 'block'};"}
    %h2
      Location 
      -if (@locations.index(@location) + 1) > 1
        = link_to image_tag("/images/icons/previous.gif"), customer_location_path(@customer, @locations.at(@locations.index(@location) -1), :order => params[:order])
      = "#{@locations.index(@location) + 1} of #{@locations.count}"
      -if (@locations.index(@location) + 1) < @locations.count
        = link_to image_tag("/images/icons/next.gif"), customer_location_path(@customer, @locations.at(@locations.index(@location) +1), :order => params[:order])
    %span.actions
      = link_to image_tag("/images/icons/location-create.gif"), new_customer_location_path(@customer, :order => params[:order])
      = link_to image_tag("/images/icons/edit.gif"), edit_customer_location_path(@customer, @location, :order => params[:order])
      = link_to image_tag("/images/icons/delete.gif"), customer_location_path(@customer, @location, :order => params[:order]), :confirm => 'Are you sure?', :method => :delete
    %hr.clear/
    %ul.record
      %li= @location.name
      %li
        = @location.street
        %br/
        = "#{@location.zip} #{@location.city}"
      %li
        = "Fon: #{@location.fon}"
        %br/
        = "Fax: #{@location.fax}"
      .clear
  = render :partial => 'customers/locations/form'
