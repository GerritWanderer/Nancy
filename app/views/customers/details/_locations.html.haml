.location
  .details{:style => "display: #{@displayLocationRecord || 'block'};"}
    %h2
      Location 
      -if (@locations.index(@location) + 1) > 1
        = link_to image_tag("/images/icons/previous.gif"), customer_location_path(@customer, @locations.at(@locations.index(@location) -1), :order => params[:order])
      = "#{@locations.index(@location) + 1} of #{@locations.count}"
      -if (@locations.index(@location) + 1) < @locations.count
        = link_to image_tag("/images/icons/next.gif"), customer_location_path(@customer, @locations.at(@locations.index(@location) +1), :order => params[:order])
    %span.actions
      = link_to image_tag("/images/icons/location-create.gif"), new_customer_location_path(@customer, :order => params[:order])
      = link_to image_tag("/images/icons/edit.gif"), edit_customer_location_path(@customer, @location, :order => params[:order])
      = link_to image_tag("/images/icons/delete.gif"), customer_location_path(@customer, @location, :order => params[:order]), :confirm => 'Are you sure?', :method => :delete
    %hr.clear/
    %ul.record
      %li= @location.name
      %li= @location.street
      %li= "#{@location.zip} #{@location.city}"
      %li= "Fon: #{@location.fon}"
      %li= "Fax: #{@location.fax}"
      .clear
  = form_for([@customer, @form_location], :html => {:style => "display: #{@displayLocationForm || 'none'};"}) do |f|
    -if @form_location.errors.any?
      #error_explanation
        %h2= "#{pluralize(@form_location.errors.count, "error")} prohibited this contact from being saved:"
        %ul
          = @form_location.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      %legend Create Location
      = link_to image_tag("/images/icons/container-close.gif"), customer_path(@customer, :order => params[:order])
      %hr.clear/
      %dl
        %dt= f.label :name
        %dd= f.text_field :name
        %dt= f.label :street
        %dd= f.text_field :street
        %dt= f.label :zip
        %dd
          = f.text_field :zip, :class => 'zip'
          = f.text_field :city, :class => 'city'
        %dt= f.label :fon
        %dd= f.text_field :fon
        %dt= f.label :fax
        %dd= f.text_field :fax
    = f.hidden_field :customer_id, :value => @customer.id
    = f.submit 'Save Location'