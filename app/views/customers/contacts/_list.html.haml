.contacts
  .details{:style => "display: #{@displayContactsRecord || 'block'};"}
    %h2 Contacts
    %span.actions
      = link_to image_tag("/images/icons-nancy/contact-create.gif"), new_customer_location_contact_path(@customer, @location, :order => params[:order]) if can? :manage, Contact
    %hr.clear/
    %ul.toolbar
      %li.name Name
      %li Department
      %li.fon Contact
      .clear
    - @contacts.each do |contact|
      %ul.record
        %li.name= "#{contact.salutation} #{contact.title} #{contact.firstname} #{contact.lastname}"
        %li= contact.department
        %li.fon
          -if !contact.fon.empty?
            %span= "Fon: #{contact.fon}"
          -if !contact.fax.empty?
            %span= "Fax: #{contact.fax}"
          -if !contact.mobile.empty?
            %span= "Mobile: #{contact.mobile}"
        %li.actions
          = mail_to contact.email, image_tag("/images/icons-nancy/mail.gif")
          = link_to image_tag("/images/icons-nancy/edit.gif"), edit_customer_location_contact_path(@customer, @location, contact, :order => params[:order]) if can? :manage, Contact
          = link_to image_tag("/images/icons-nancy/delete.gif"), customer_location_contact_path(@customer, @location, contact, :order => params[:order]), :confirm => 'Are you sure?', :method => :delete if can? :manage, Contact
        .clear
  = render :partial => 'customers/contacts/form' if can? :manage, Contact