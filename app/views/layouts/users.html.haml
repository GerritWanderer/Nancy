!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
%head
  %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
  %title Nancy
  %link{:rel => 'stylesheet/less', :type => 'text/css', :href => '/stylesheets/nancy.less'}
  %link{:rel => 'stylesheet/less', :type => 'text/css', :href => '/stylesheets/login.less'}
  = javascript_include_tag :defaults
  = stylesheet_link_tag :all
  = csrf_meta_tag
%body
  #navigation
    .container
  .container#content
    .clear
    .wrapper
      - flash.each do |key, value|
        %div{:class => key}= value
      = yield
  .clear