!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %title Nancy / #{controller.controller_name}
    = stylesheet_link_tag("compiled/screen.css")
    = stylesheet_link_tag("compiled/#{controller.controller_name}") if File.exist?("tmp/stylesheets/compiled/#{controller.controller_name}.css")
    = javascript_include_tag :defaults
    = stylesheet_link_tag :all
    = csrf_meta_tag
  %body{:id => "report"}
    #content.container
      %p.sender= Configuration.find_by_key('sender').value
      %adress
        =@project.contact.location.name
        %br/
        = "#{@project.contact.firstname} #{@project.contact.lastname}"
        %br/
        =@project.contact.location.street
        %br/
        %br/
        = "#{@project.contact.location.zip} #{@project.contact.location.city}"

      %h1 Project Report: #{@project.id}
      %h2=@project.title
      %hr/
      %div#works
        -@project.works.order("started_at ASC").each do |work|
          %ul{:class=>"record", :id=>"work#{work.id}"}
            %li.time
              = work.started_at.strftime('%Y-%m-%d')
              %br/
              = "#{User.find(work.user_id).firstname} #{User.find(work.user_id).lastname}"
            %li.description= work.description
            %li.duration #{work.duration.to_f / 60} hours
            %li.sum= number_to_currency((work.duration.to_f / 60 * work.fee), :unit => Configuration.find_by_key('currency').value)
            .clear 
        %dl#sum
          %dt.duration Duration:
          %dd.duration #{@project.works.sum("duration").to_f / 60} hours
          %dd.duration #{number_to_currency(@net_sum, :unit => @currency)}
          %dt.discount Discount (#{@project.discount}%):
          %dd.discount #{number_to_currency(@discount, :unit => @currency)}
          %dt.net Sum net:
          %dd.net #{number_to_currency(@full_net_sum, :unit => @currency)}
          %dt.tax Add #{@tax}% tax:
          %dd.tax #{number_to_currency(@tax_sum, :unit => @currency)}
          %dt.final Final Tax Sum:
          %dd.final #{number_to_currency(@full_tax_sum, :unit => @currency)}