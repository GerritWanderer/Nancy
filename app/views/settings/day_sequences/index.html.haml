.filter
	%ul
		%li= link_to "Manage Users", settings_user_admin_index_path
		%li.active= link_to "Managae Holidays", settings_day_sequences_path
		.clear
#holidayForm
	- if @day_sequence.new_record?
		= form_for @day_sequence, :url => settings_day_sequences_path do |f|
			- render :partial => "form", :locals => { :f => f }
	- else
		= form_for @day_sequence, :url => settings_day_sequence_path(@day_sequence) do |f|
			- render :partial => "form", :locals => { :f => f }
	.clear

#sequences
	#holidays
		%ul.title
			%li= "Holidays this year: #{@holidays_current_year}"
			%li= "Next Holiday: #{@holiday_upcoming.first.date_from}"
			.clear
	#users
		- User.all.each do |user|
			.user
				%ul.title
					%li= "#{user.firstname} #{user.lastname}"
					%li= "Vacation available: #{user.holidays}"
					%li= "Vacation taken: #{DaySequence.find_type_by_user_and_year(2, user.id, Date.today.year).count}"
					%li= "Days of Absence: #{DaySequence.find_type_by_user_and_year(3, user.id, Date.today.year).count}"
					.clear